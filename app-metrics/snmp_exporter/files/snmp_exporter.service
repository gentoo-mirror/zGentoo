[Unit]
Description=SNMP exporter for prometheus

[Service]
User=prometheus
Group=prometheus
Type=simple
Restart=on-failure
Environment=SNMPE_CONF="/etc/snmp_exporter/snmp.yml"
Environment=SNMPE_OPTS="--web.listen-address=localhost:9116"
ExecStart=/usr/bin/snmp_exporter --config.file=${SNMPE_CONF} ${SNMPE_OPTS}
PIDFile=/run/snmp_exporter.pid

[Install]
WantedBy=multi-user.target
